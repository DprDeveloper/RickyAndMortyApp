<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dprddeveloper.rickyandmortyapp" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RickyAndMortyApp" >
        <activity
            android:name="com.dprddeveloper.rickyandmortyapp.ui.activity.CharacterActivity"
            android:exported="true"
            android:label="@string/title_activity_character"
            android:theme="@style/Theme.RickyAndMortyApp.NoActionBar" />
        <activity
            android:name="com.dprddeveloper.rickyandmortyapp.ui.activity.LocationActivity"
            android:exported="true"
            android:label="@string/title_activity_location"
            android:theme="@style/Theme.RickyAndMortyApp.NoActionBar" />
        <activity
            android:name="com.dprddeveloper.rickyandmortyapp.ui.activity.EpisodeActivity"
            android:exported="true"
            android:label="@string/title_activity_episode"
            android:theme="@style/Theme.RickyAndMortyApp.NoActionBar" />
        <activity
            android:name="com.dprddeveloper.rickyandmortyapp.ui.activity.MainActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>